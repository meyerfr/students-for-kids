<div class="navbar navbar-expand-lg navbar-light navbar-sfk">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "hand-print-red.png" %>
  <% end %>

  <h1>Students for Kids</h1>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user? %>
        <li class="nav-item dropdown">
          <% if current_admin || !current_user.photo.attached? %>
            <i class="fas fa-user avatar dropdown-toggle avatar-bordered" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <% else %>
            <%= cl_image_tag(current_user.photo.key, width: 40, height: 40, gravity: 'face:center', crop: :fill, effect: :sharpen, class: 'avatar dropdown-toggle avatar-bordered', id: 'navbarDropdown', data: { toggle: "dropdown"}, 'aria-haspopup': true, 'aria-expanded': false) %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "mein Profil", public_send("#{current_user.class.to_s.downcase}_path", current_user), class: "dropdown-item" %>
            <%= link_to "meine Buchungen", bookings_path, class: 'dropdown-item' %>
            <%= link_to "Log out", destroy_admin_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown active">
          <span class="nav-item dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Log in</span>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "als Babysitter", new_sitter_session_path, class: 'dropdown-item' %>
            <%= link_to "als Kunde", new_customer_session_path, class: 'dropdown-item' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
